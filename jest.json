{
    "globals": {
        "ts-jest": {
            "tsConfig": "./tsconfig.test.json",
            "babelConfig": true
        }
    },
    "collectCoverageFrom": [
        "src/**/*.{ts,tsx}",
        "!**/node_modules/**"
    ],
    "verbose": true,
    "transform": {
        ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/test/",
        "/lib/",
        "/dist/"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 60,
            "functions": 60,
            "lines": 60,
            "statements": 60
        }
    }
}