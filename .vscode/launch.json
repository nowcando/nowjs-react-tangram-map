 {
     "version": "0.2.0",
     "configurations": [

         {
             "type": "chrome",
             "request": "launch",
             "name": "web-client-chrome-launch",
             "url": "http://localhost:6020",
             "webRoot": "${workspaceRoot}/",
             "preLaunchTask": "webpack-dev-server-watch",
             
             //  "postDebugTask": "${command:workbench.action.tasks.terminate}"
         },
         {
             "type": "chrome",
             "request": "launch",
             "name": "web-client-chrome-launch-notask",
             "url": "http://localhost:6020",
             "webRoot": "${workspaceRoot}/",

         },
         {
             "type": "node",
             "request": "launch",
             "name": "web-client-webpack-launch",
             "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server",
             "args": [],
             "env": {
                 "NODE_ENV": "development"
             }

         }
     ],
     "compounds": [{
         "name": "web-client-launch",
         "configurations": ["web-client-webpack-launch", "web-client-chrome-launch-notask"]
     }]
 }